generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}
model User {
  id        String   @id @default(uuid())
  email     String   @unique
}

model Website {
  id        String   @id @default(uuid())
  url       String   @unique
  userId    String
  tick      WebsiteTick[]
}

model Validator {
  id        String   @id @default(uuid())
  publicKey String   @unique
  location  String
  ip        String
  tick      WebsiteTick[]
}

model WebsiteTick{
  id          String   @id @default(uuid())
  websiteId   String
  validatorId String
  status      WebsiteTickStatus
  timestamp   DateTime
  latency     Int
  website     Website  @relation(fields: [websiteId], references: [id])
  validator   Validator @relation(fields: [validatorId], references: [id])
}


enum WebsiteTickStatus{
  Good
  Bad
}